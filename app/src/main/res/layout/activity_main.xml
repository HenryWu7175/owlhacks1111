<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_retro_desktop">

    <!-- Center the retro window and give outer padding -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="20dp"
        android:gravity="center">

        <!-- Retro window fills most of the screen -->
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/retro_window_bg">

            <!-- Title bar -->
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:background="@drawable/retro_title_bar"
                android:paddingStart="16dp"
                android:paddingEnd="12dp">

                <TextView
                    android:id="@+id/tvTitle"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="KIM â€¢ Tasks"
                    android:textStyle="bold"
                    android:textColor="#FFFFFF"
                    android:textSize="20sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toStartOf="@+id/windowDots"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent" />

                <!-- window control dots -->
                <LinearLayout
                    android:id="@+id/windowDots"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent">

                    <View android:layout_width="16dp" android:layout_height="16dp"
                        android:layout_marginStart="6dp" android:background="#E35C5C"/>
                    <View android:layout_width="16dp" android:layout_height="16dp"
                        android:layout_marginStart="6dp" android:background="#E3D35C"/>
                    <View android:layout_width="16dp" android:layout_height="16dp"
                        android:layout_marginStart="6dp" android:background="#6AE35C"/>
                </LinearLayout>
            </androidx.constraintlayout.widget.ConstraintLayout>

            <!-- Content -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="top|center_horizontal"
                android:orientation="vertical"
                android:padding="28dp">

                <!-- Points -->
                <TextView
                    android:id="@+id/tvPoints"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="28dp"
                    android:text="Points: 0"
                    android:textColor="#222222"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <!-- Bed -->

                <ImageView
                    android:id="@+id/imageView6"
                    android:layout_width="326dp"
                    android:layout_height="116dp"
                    app:srcCompat="@mipmap/ic_launcher" />

                <!-- Table / Desk -->

                <Button
                    android:id="@+id/make_bed"
                    android:layout_width="match_parent"
                    android:layout_height="84dp"
                    android:layout_marginBottom="22dp"
                    android:background="@drawable/retro_button"
                    android:text="Bed"
                    android:textColor="#FFFFFF"
                    android:textSize="20sp" />

                <ImageView
                    android:id="@+id/imageView5"
                    android:layout_width="317dp"
                    android:layout_height="118dp"
                    app:srcCompat="@mipmap/ic_launcher" />

                <Button
                    android:id="@+id/table_desk"
                    android:layout_width="match_parent"
                    android:layout_height="84dp"
                    android:layout_marginBottom="22dp"
                    android:background="@drawable/retro_button"
                    android:text="Table / Desk"
                    android:textColor="#FFFFFF"
                    android:textSize="20sp" />

                <!-- Dishes -->

                <ImageView
                    android:id="@+id/imageView"
                    android:layout_width="295dp"
                    android:layout_height="122dp"
                    app:srcCompat="@mipmap/ic_launcher" />

                <Button
                    android:id="@+id/dishes"
                    android:layout_width="match_parent"
                    android:layout_height="84dp"
                    android:background="@drawable/retro_button"
                    android:text="Dishes"
                    android:textColor="#FFFFFF"
                    android:textSize="20sp" />

            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</FrameLayout>