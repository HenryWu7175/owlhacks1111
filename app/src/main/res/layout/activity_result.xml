<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_retro_desktop">

    <LinearLayout
        android:orientation="vertical"
        android:padding="20dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/retro_window_bg">

            <!-- Title bar -->
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:background="@drawable/retro_title_bar"
                android:paddingStart="16dp"
                android:paddingEnd="12dp">

                <TextView
                    android:id="@+id/tvTitleResult"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="KIM • Assistant"
                    android:textStyle="bold"
                    android:textColor="#FFFFFF"
                    android:textSize="20sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <!-- Content -->
            <LinearLayout
                android:orientation="vertical"
                android:padding="24dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/textView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="What productivity task would you like help with today?"
                    android:textAlignment="center"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:padding="8dp" />

                <EditText
                    android:id="@+id/textView2"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:hint="Type: make bed, clean desk/table, do dishes…"
                    android:gravity="top|start"
                    android:padding="12dp"
                    android:background="#EEEEEE"
                    android:minLines="6" />

                <Button
                    android:id="@+id/buttonSubmit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Go"
                    android:textColor="#FFFFFF"
                    android:background="@drawable/retro_button"
                    android:layout_marginTop="16dp" />

                <Button
                    android:id="@+id/buttonExamples"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="See Examples"
                    android:textColor="#FFFFFF"
                    android:background="@drawable/retro_button"
                    android:layout_marginTop="12dp" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</FrameLayout>